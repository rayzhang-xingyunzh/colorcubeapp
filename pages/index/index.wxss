.swiper-panel{
  overflow: hidden;
  width: 100%;
  height: 350rpx;
  background-size: 100%;
  background-repeat: no-repeat;
  background-image: url("https://mmbiz.qpic.cn/mmbiz_png/L9XEEMNjUUUEU7cicN22j0HkXY6y5yF6LavUjcsOYtkFs4VS3gFjUpKwjTLiaRlia52Qj3LqSWGCEKxjStuyN63NA/640?wx_fmt=png&wxfrom=5&wx_lazy=1")
}

.swiper{
  height: 350rpx;
  /* margin-top: 10rpx; */
  width: 100%;
  /* float:left; */
  /* margin-left: auto;
  margin-right: auto; */
}

.swiper image{
  width: 100%;
  height: 100%;
}

.hot_game-panel{
  width: 100%;
}

.hot_game-title{
  display: flex;
  align-items: center;
  color: white;
  height: 74rpx;
  line-height: 74rpx;
  background-size: 100%;
  background-repeat: no-repeat;
  background-image: url('https://mmbiz.qpic.cn/mmbiz_png/L9XEEMNjUUW51NDQLtmx8xkKuC2HtErxSS0MJZlrmzdcYZgibwMXMRGIJPFicbCNkoo2O8S5Qkgycmic4p6icHkb9g/640?wx_fmt=png&wxfrom=5&wx_lazy=1&retryload=1')
}

.hot_game-title image{
  height: 50rpx;
  width: 80rpx;
}

.hot_game-content{
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
  margin-top:30rpx;
}

.hot_game-item{
  display: flex;
  align-items: center;
  box-shadow: 0rpx 5rpx 3rpx 0rpx #b1b1b1;
  border-radius: 22rpx;
  margin: 15rpx;
  height: 160rpx;
  width: 320rpx;
  background-color: #fff1e8;
}

.hot_game-item image{
  margin-left: 30rpx;
  background-color: white;
  height: 110rpx;
  width: 110rpx;
}

.hot_game-item text{
  /* margin-left: 10rpx; */
  text-align: center;
  height: 50rpx;
  font-size: 42rpx;
  width: 200rpx; 
}

.actions-panel{
  padding-left: 0.5%;
  padding-right:0.5%;
  width: 100%;
  display: flex;
  position: absolute;
  bottom: 0;
}

.action-pad{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 33%;
  height:190rpx;
}

.action-pad image{
  width: 125rpx;
  height: 125rpx;
}

.action-pad text{
  margin-top: 15rpx;
  font-size: 24rpx;
}